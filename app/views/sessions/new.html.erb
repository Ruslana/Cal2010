<div id="vshocolade-form"> 
	<fieldset>
		<%= flash[:note] %>
		<legend>Please Log In or <%= link_to "Register", new_user_path %></legend>
		<% form_tag(sessions_path) do %> 
		<p> 
			<%= label_tag :name, "Name:" %>
			<%= text_field_tag :name, params[:name] %> 
		</p> 
		<p> 
			<%= label_tag :password, "Password:" %>
			<%= password_field_tag :password, params[:password] %> 
		</p> 
		<p> 
		<%= submit_tag "login" %> 
	</p> 
	<% end %> 
	</fieldset> 
</div>